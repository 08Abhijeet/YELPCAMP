<%layout ('Layouts/boilerplates') %>
<h1>Login</h1>
<form action="/login" method="POST" class="validateforms" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username"> Enter the Username: </label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <label class="form-label" for="password"> Enter the password: </label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">Looks good!</div>
  </div>

  <button class="btn btn-success">Login</button>
</form>
